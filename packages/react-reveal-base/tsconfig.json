{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "baseUrl": "src",
    "declaration": true,
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src", "types"]
}
